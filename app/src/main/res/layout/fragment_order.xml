            android:layout_height="wrap_content"
            android:text="  History"
            android:paddingVertical="5dp"
            android:textColor="@color/drakblack"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
