                android:id="@+id/ord_tex1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/drakblack"
                android:textStyle="bold"
                android:text="Order ID:58967895"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/drakblack"
                android:text="25 june, 2023 at 10:10 AM"
                android:layout_below="@+id/ord_tex1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 199"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fd_bor">

    <ImageView
        android:id="@+id/fd"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/fd_img"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:layout_marginVertical="5dp"
        android:layout_toRightOf="@+id/fd">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/drakblack"
    android:textStyle="bold"
    android:text="Foods18"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skye Earth Corporate Park,AB road,indore"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/drakblack"

        android:text="3 Items"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/upcom_all_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fd"
        android:paddingVertical="10dp"
        android:background="@drawable/bor_upcom_all"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/four_five_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/drakblack"
            android:textStyle="bold"
            android:text="4.5"/>
        <ImageView
            android:id="@+id/img_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/star"
            android:layout_toRightOf="@+id/four_five_text"/>
        <TextView
            android:id="@+id/De_Fai_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            android:textColor="@color/drakblack"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_star"/>
        <TextView
            android:id="@+id/tr_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="3dp"
            android:text="Track order"
            android:textColor="@color/red"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_fast_take"
            android:layout_toLeftOf="@+id/tr_order"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upcom_all_img">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="View Details"
            android:textColor="@color/red"
            android:textAlignment="center"/>
    </LinearLayout>

</RelativeLayout>


    </LinearLayout>

    </LinearLayout>









    <LinearLayout
