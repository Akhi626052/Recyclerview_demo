                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:text="View Details"
                        android:textColor="@color/red"
                        android:textAlignment="center"/>
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>







