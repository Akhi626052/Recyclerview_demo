                        android:layout_height="wrap_content"
                        android:textColor="@color/drakblack"
                        android:textStyle="bold"
                        android:text="Foods18"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="skye Earth Corporate Park,AB road,indore"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/drakblack"

                        android:text="3 Items"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/upcom_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fd_food"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bor_upcom_all"
                    android:layout_marginTop="5dp">

                    <TextView
