                    android:id="@+id/fd_food"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fd_img"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
