<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="12dp">


<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/imagesrc3"
    android:layout_width="120dp"
    android:layout_height="107dp"
    android:src="@drawable/food_src"
    android:scaleType="centerCrop"
    android:layout_marginHorizontal="20dp"
    app:shapeAppearanceOverlay="@style/ig">

</com.google.android.material.imageview.ShapeableImageView>







        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagesrc3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-2dp"

            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:text="Best Seller"
            android:background="@drawable/edit_bor"
            />

        <TextView
            android:id="@+id/txtName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese Corn pizza"
            android:layout_toRightOf="@+id/imagesrc3"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtName4"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extera Corn Pizza"
            android:layout_below="@+id/txtName3"
            android:layout_toRightOf="@+id/imagesrc3"/>
        <TextView
            android:id="@+id/rating"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="4.5"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/txtName4"
            android:layout_toRightOf="@+id/imagesrc3"
            />








        <ImageView
            android:id="@+id/texna"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/star"
            android:layout_toRightOf="@+id/rating"
            android:layout_below="@+id/txtName4"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/twentyFive"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/txtName4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/texna"

            android:text="(25+)"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/veg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/veg"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/twentyFive"
            android:layout_below="@+id/txtName4"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/textRs"
    android:layout_width="88dp"
    android:layout_height="wrap_content"
    android:text=" Rs 199"
    android:layout_marginTop="12dp"
    android:layout_below="@+id/rating"
    android:layout_toRightOf="@+id/imagesrc3"
    android:textSize="20dp"
    android:textColor="@color/red"
    android:paddingTop="10dp"/>
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add"
            android:layout_toRightOf="@+id/textRs"
            android:layout_below="@+id/veg"
            android:backgroundTint="@color/red"
            android:background="@drawable/edit1_border"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            />



    </RelativeLayout>
</LinearLayout>