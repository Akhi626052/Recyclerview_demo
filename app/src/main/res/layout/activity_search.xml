<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Search"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_img"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textAlignment="center"
            android:textSize="20px"/>

    </RelativeLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"

          >
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/search_img"
              android:layout_marginLeft="30dp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Search here"
              android:layout_marginLeft="20dp"/>
      </LinearLayout>
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:elevation="6dp"
             >
             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/imgFood"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/image_food"
                 android:theme="@style/sr"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="10% off"
                 android:textColor="@color/white"
                 android:layout_marginTop="10dp"
                 android:paddingHorizontal="5dp"
                 android:background="@drawable/offedittext"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Best Seller"
                 android:layout_below="@+id/imgFood"

                 android:gravity="center"
                 android:paddingHorizontal="17dp"
                 android:layout_marginTop="0dp"
                 android:background="@drawable/bottom_edittext"
                 />

             <TextView
                 android:id="@+id/textTextView11"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/imgFood"
                 android:text="Cheese Corn sandwitch"
                 android:textColor="@color/drakblack"
                 android:layout_marginLeft="10dp"
                 android:textSize="16dp"/>
             <TextView
                 android:id="@+id/textTextView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Extra Cheese Corn"
                 android:layout_toRightOf="@+id/imgFood"
                 android:layout_below="@+id/textTextView11"
                 android:layout_marginLeft="10dp"/>
             <LinearLayout
                 android:id="@+id/linLayout"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/imgFood"
                 android:layout_below="@+id/textTextView1"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="20dp"
                 >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="4.5"

                     />
             <ImageView
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:src="@drawable/star"
                 android:layout_marginLeft="5dp"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="(25+)"
                 android:layout_marginLeft="5dp"/>
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/veg"
                 android:layout_marginLeft="5dp"/>

             </LinearLayout>
             <TextView
                 android:id="@+id/tsText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Rs 199"
                 android:textSize="16dp"
                 android:textColor="@color/red"
                 android:textStyle="bold"
                 android:layout_toRightOf="@+id/imgFood"
                 android:layout_marginLeft="20dp"
                 android:layout_below="@+id/linLayout"
                 android:layout_marginTop="20dp"/>
             <Button
                 android:textColor="@color/white"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text=" + Add "

                 android:layout_below="@+id/linLayout"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/edt_bor"
                 android:textAllCaps="false"
                 android:layout_alignParentRight="true"
                 />

         </RelativeLayout>





