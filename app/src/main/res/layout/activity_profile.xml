<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activit.Profile">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/back_img"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Complete your profile"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/profile_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageView
                        android:id="@+id/ImgCamera"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/camera_dit"
                        android:src="@drawable/camera"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/img1"
                        app:tint="@color/red" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <EditText
                    android:id="@+id/fullNamEditTx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="28dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:background="@drawable/boarder_bulk"
                    android:hint="Enter your full name"/>

                <EditText
                    android:id="@+id/emailEditTx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="28dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:background="@drawable/boarder_bulk"
                    android:hint="Enter your email"/>


                <EditText
                    android:id="@+id/numEditTx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="28dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:background="@drawable/boarder_bulk"
                    android:hint="Enter your mobile number"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boarder_bulk"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="9dp"
                    android:orientation="horizontal">
               <!--     <EditText
                        android:id="@+id/state_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="28dp"
                        android:background="@drawable/time_bg"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14dp"
                        android:hint="State"/>-->
                    <Spinner
                        android:id="@+id/spinnerState"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="20dp"
                        android:src="@drawable/drop_down"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boarder_bulk"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="9dp"
                    android:orientation="horizontal">
  <!--                  <EditText
                        android:id="@+id/city_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="28dp"
                        android:background="@drawable/time_bg"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14dp"
                        android:hint="City"/>-->
                    <Spinner
                        android:id="@+id/spinnerCity"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="20dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="20dp"
                        android:src="@drawable/drop_down"/>
                </RelativeLayout>


                <EditText
                    android:id="@+id/addressEditTx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="28dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="14dp"
                    android:lines="5"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:background="@drawable/address_bg_bulkor"
                    android:hint="Address"/>



                <Button
                    android:id="@+id/SubmitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="80dp"
                    android:background="@drawable/save_address_bg"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:text="SUBMIT"/>







            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
