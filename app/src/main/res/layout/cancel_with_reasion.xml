<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CancelWithReasion"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:background="@drawable/boredit"
        android:elevation="5dp">



        <ImageView
            android:id="@+id/backImg"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:src="@drawable/back_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/backImg"
            android:text="order cancel" />
    </RelativeLayout>


    <EditText
        android:id="@+id/cancel_successfully"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/write_mess_boarder"
        android:gravity="top"
        android:hint="write resion"
        android:lines="7"
        android:maxLines="7"
        android:paddingLeft="5dp"
        android:paddingTop="0dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    android:paddingHorizontal="60dp"
    android:backgroundTint="@color/red"
    android:text="submit"/>



</LinearLayout>
